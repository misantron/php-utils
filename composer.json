{
  "name": "misantron/php-utils",
  "type": "library",
  "description": "A collection of PHP utility classes.",
  "version": "2.0.0",
  "minimum-stability" : "stable",
  "license": "MIT",
  "keywords": ["php", "utilities", "array", "string", "datetime"],
  "homepage": "https://github.com/misantron/php-utils",

  "authors": [
    {
      "name": "Alexandr Ivanov",
      "email": "misantron@gmail.com",
      "homepage": "https://github.com/misantron"
    }
  ],

  "support": {
    "email": "misantron@gmail.com",
    "issues": "https://github.com/misantron/php-utils/issues"
  },

  "require": {
    "php": ">=5.4",
    "ext-mbstring": "*",
    "ext-openssl": "*",
    "cocur/slugify": "~1.0"
  },
  "require-dev": {
    "phpunit/phpunit": "~4.4",
    "satooshi/php-coveralls": "dev-master",
    "squizlabs/php_codesniffer": "~2.0",
    "apigen/apigen": "~4.0"
  },

  "autoload": {
    "psr-4": {
      "Utility\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Utility\\Tests\\": "tests/"
    }
  }
}